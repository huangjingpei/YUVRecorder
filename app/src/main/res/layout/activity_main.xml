<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btnStartRecord"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:onClick="onClick"
        android:text="startRecord"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnStopRecord"

         />

    <Button
        android:id="@+id/btnStopRecord"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:onClick="onClick"
        android:text="stopRecrod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnStartRecord"
        app:layout_constraintBottom_toBottomOf="@id/btnShareMedia"
        />

    <Button
        android:id="@+id/btnShareMedia"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:onClick="onClick"
        android:text="shareMedia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>